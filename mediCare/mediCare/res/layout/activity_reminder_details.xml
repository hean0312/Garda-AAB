<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aab.medicare.ReminderDetailsActivity" >

      <LinearLayout
        android:id="@+id/ll_reminder_details1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="You need to take 1 pil of Cataflam on 03.00 pm, it means 3 hours to go" />

        <LinearLayout
            android:id="@+id/ll_reminder_details2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" >

            <Button
                android:id="@+id/btnReschedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/TextView1"
                android:layout_below="@+id/TextView1"
                android:layout_weight="0.3"
                android:onClick="onClickReminderDetails"
                android:text="Re\nschedule" />

            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button1"
                android:layout_alignTop="@+id/button1"
                android:layout_weight="0.3"
                android:onClick="onClickReminderDetails"
                android:text="Done\n" />

            <Button
                android:id="@+id/btnRemindLater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button1"
                android:layout_alignTop="@+id/button1"
                android:layout_weight="0.3"
                android:onClick="onClickReminderDetails"
                android:text="Remind Later" />

        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
